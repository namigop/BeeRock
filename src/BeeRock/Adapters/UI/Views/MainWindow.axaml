<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:viewModels="clr-namespace:BeeRock.Adapters.UI.ViewModels"
        xmlns:views="clr-namespace:BeeRock.Adapters.UI.Views"

        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BeeRock.Adapters.UI.Views.MainWindow"
        Icon="/Resources/BeeRock.ico"
        Title="BeeRock"
        Background="#222222"
        SizeToContent="WidthAndHeight"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>
    <!-- -->
    <!-- <NativeMenu.Menu> -->
    <!--     <NativeMenu> -->
    <!--         <NativeMenuItem Header="File"> -->
    <!--             <NativeMenu> -->
    <!--                 <NativeMenuItem Header="Open" Gesture="Ctrl+O" /> -->
    <!--             </NativeMenu> -->
    <!--         </NativeMenuItem> -->
    <!--         ~1~ <NativeMenuItem Header="Edit"> @1@ -->
    <!--         ~1~     <NativeMenu> @1@ -->
    <!--         ~1~         <NativeMenuItem Header="Copy"/> @1@ -->
    <!--         ~1~         <NativeMenuItem Header="Paste"/> @1@ -->
    <!--         ~1~     </NativeMenu> @1@ -->
    <!--         ~1~ </NativeMenuItem> @1@ -->
    <!-- -->
    <!--     </NativeMenu> -->
    <!-- </NativeMenu.Menu> -->
    <Panel>

        <Grid Margin="5 25 5 5">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem Header="AddNewTab" IsVisible="False">
                    <views:AddServiceControl DataContext="{Binding AddNewServiceArgs}"
                                             VerticalAlignment="Center" HorizontalAlignment="Center" />
                </TabItem>
                <TabItem Header="ServicesTab" IsVisible="False" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid RowDefinitions="Auto, *">
                        <Grid.Styles>
                            <Style Selector="TabControl WrapPanel">
                                <!-- <Setter Property="Background" Value="#2B579A"/> -->
                                <!--Push the Tab header to the right so that we can insert buttons on the left
                                    like how the browsers are working-->
                                <Setter Property="Margin" Value="120 0 0 0" />
                            </Style>
                        </Grid.Styles>

                        <TabControl VerticalContentAlignment="Stretch" Items="{Binding TabItems}" SelectedItem="{Binding SelectedTabItem}">
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Button Background="Transparent" Content="x" VerticalAlignment="Top"
                                                Margin="5 0 -5 0"
                                                Foreground="DarkGray"

                                                Command="{Binding CloseCommand}"
                                                DockPanel.Dock="Right" />
                                        <TextBlock Text="{Binding HeaderText}" FontSize="14" FontWeight="Normal" VerticalAlignment="Center" />
                                    </DockPanel>
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <viewModels:TabItemSelector>
                                    <DataTemplate x:Key="ServiceTab">
                                        <Grid>
                                            <views:ServiceControl VerticalAlignment="Stretch" />
                                        </Grid>
                                    </DataTemplate>
                                    <DataTemplate x:Key="ServiceMenagementTab">

                                        <views:ServiceManagementControl VerticalAlignment="Stretch" />

                                    </DataTemplate>
                                </viewModels:TabItemSelector>


                            </TabControl.ContentTemplate>
                        </TabControl>

                        <!-- Menu for each service tab-->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="5 10 10 0">
                            <Button Background="Transparent" Command="{Binding  ShowNewServiceCommand}"
                                    Content="{StaticResource iconNewService}"
                                    ToolTip.Tip="Mock a service" Padding="2" />
                            <Button Background="Transparent" Margin="5 0 0 0"
                                    Content="{StaticResource iconLog}" Command="{Binding  ViewHttpLogCommand}"
                                    ToolTip.Tip="View http logs" Padding="2" />
                            <Border Width="1" Background="Gray" Margin=" 5" />
                            <Button Background="Transparent" Margin="5 0 0 0"
                                    Content="{StaticResource iconGear}" Command="{Binding  OpenServiceMgmtCommand}"
                                    ToolTip.Tip="Manage your services" Padding="2" />
                            <Border Width="1" Background="Gray" Margin=" 5" />
                        </StackPanel>
                    </Grid>

                </TabItem>
            </TabControl>

        </Grid>
        <!-- </ExperimentalAcrylicBorder> -->
    </Panel>
</Window>