            <!--                                     <TextBlock Grid.Column="0" HorizontalAlignment="Right" Text="{Binding Key}"></TextBlock> -->
            <!--                                     <TextBlock Grid.Column="1" Text="{Binding Value}" Margin="10 0 0 0"></TextBlock> -->
            <!--                                 </Grid> -->
            <!--                             </DataTemplate> -->
            <!--                         </ListBox.ItemTemplate> -->
